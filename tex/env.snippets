# get math context
global !p
def math():
	return vim.eval("vimtex#syntax#in_mathzone()") == '1'
endglobal

# ---------------------------------------------------------------

# fancy section env
context "math()"
snippet thm "theorem" b
\beging{theorem}
	${1:Theorem name} \\
	${2:Body}
\end{theorem}
endsnippet

